<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1" >

    <RelativeLayout
        android:id="@+id/duihuan_viewpager_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <android.support.v4.view.ViewPager
            android:id="@+id/teacher_choose_viewpager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" >
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/xianjin_include"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-24dp"
        android:background="@color/bottom_widow_color"
        android:orientation="horizontal" 
      >

        <ImageView
            android:id="@+id/xianjin_right_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:onClick="true"
            android:padding="10dp"
            android:src="@drawable/select_trees_points" />

        <TextView
            android:id="@+id/xianjin_account_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="109dp"
            android:drawableTop="@drawable/select_back"
            android:gravity="center"
            android:padding="5dp"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/xianjin_account_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/xianjin_account_back"
            android:drawableTop="@drawable/select_confirm1"
            android:gravity="center"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/button_typeface_color"
            android:textSize="16dp" />
    </RelativeLayout>
    
      <RelativeLayout
        android:id="@+id/goods_include"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-24dp"
        android:background="@color/bottom_widow_color"
        android:orientation="horizontal"
          android:visibility="invisible" 
        >

        <ImageView
            android:id="@+id/goods_right_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:onClick="true"
            android:padding="10dp"
            android:src="@drawable/select_trees_points" />


        <TextView
            android:id="@+id/goods_account_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
          android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/select_confirm"
            android:gravity="center"
            android:padding="5dp"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="16dp" />
    </RelativeLayout>
    
    

</RelativeLayout>