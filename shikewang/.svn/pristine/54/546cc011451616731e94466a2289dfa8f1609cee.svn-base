<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/userregister_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生注册"
            android:textColor="@color/top_title_color"
            android:textSize="15dp" >
        </TextView>
        <TextView
            android:id="@+id/sturegister_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="设置密码"
            android:textColor="#DC143C"
            android:textSize="25dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/ET_PhoneName"
            android:hint="请输入密码（6-14个字符）"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/eee"
            android:gravity="center_vertical"
            android:numeric="integer"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:password="true"
            android:textSize="30px" />
        <EditText
            android:id="@+id/ET_PhoneName_agin"
            android:hint="再次输入密码"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/eee"
            android:gravity="center_vertical"
            android:numeric="integer"
            android:password="true"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="30px" />
    </LinearLayout>
    <include
         android:id="@+id/incl_buttom_anim_pass_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/i_bottom_navigation"  />
    <ImageView
        android:id="@+id/iv_yindao"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:visibility="gone"
         android:src="@drawable/yindao5"/>
</RelativeLayout>