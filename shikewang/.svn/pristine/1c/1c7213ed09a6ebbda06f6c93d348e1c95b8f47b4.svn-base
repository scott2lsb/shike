<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/choose_leftScrollView"
        style="@style/layout_horizontal"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/choose_leftScrollView_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/primary_school"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="小学"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middle_school"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="中学"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/high_school"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="高中"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/choose_rightScrollView"
        style="@style/layout_horizontal"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/choose_rightScrollView_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/primary_school_firstGrade"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="一年级"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/primary_school_secondGrade"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="二年级"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/primary_school_thirdGrade"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="三年级"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/primary_school_fourthGrade"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="四年级"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/primary_school_fifthGrade"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="五年级"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middle_school_one"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="初一"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middle_school_two"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="初二"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middle_school_three"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="初三"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middle_school_four"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="初四"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/high_school_one"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="高一"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/high_school_two"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="高二"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/high_school_three"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@drawable/register_student_schoolage_false"
                android:gravity="center"
                android:text="高三"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>