<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    android:orientation="vertical" >
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/stu_pa_Info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >
        <TextView
        android:id="@+id/tv_tea_info_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/title_text" />
    <TextView
        android:id="@+id/tv_tea_info_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stu_pa_Info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/tea_head_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置头像"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"
            android:background="@color/tr_80"
            android:layout_alignParentBottom="true" />
       </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓    名:"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/tv_tea_base_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/bottom_widow_color"
                    android:text="请输入姓名"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名:"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/tv_tea_base_nike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/bottom_widow_color"
                    android:text="用户名"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>

                           <LinearLayout
                               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地    区:"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_tea_bace_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:drawableRight="@drawable/pulldown1"
                     android:layout_marginLeft="5dp"
                    android:background="@color/bottom_widow_color"
                    android:text="地区"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生       日"
                    android:layout_gravity="center"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                      <TextView
                           android:id="@+id/ed_tea_day_bir"
                            android:layout_width="wrap_content"
                           android:layout_height="30dp"
                           android:background="@color/bottom_widow_color"
                           android:padding="5dp"
                           android:layout_marginLeft="20dp"
                           android:text="xxxx-xx-xx"
                           android:layout_gravity="center"
                           android:drawablePadding="5dp"
                           android:textColor="@color/button_typeface_color"
                           />
                <RadioGroup
                    android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/tea_sex_men"
                        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="5dp"
				        android:drawableRight="@drawable/select_teainfo_check"
				        android:drawablePadding="5dp"
				        android:gravity="center"
				        android:text="男" 
				        android:button="@null"
				        android:textSize="20dp"
				        android:textColor="@color/bottom_widow_color"
				        android:padding="5dp"/>
                 <RadioButton
                    	 android:id="@+id/tea_sex_miss"
                     	 android:layout_width="wrap_content"
	                	 android:layout_height="wrap_content"
	              		 android:layout_marginLeft="5dp"
				        android:drawableRight="@drawable/select_teainfo_check"
				        android:drawablePadding="5dp"
				        android:gravity="center"
				        android:text="女" 
				        android:button="@null"
				        android:textSize="20dp"
				        android:padding="5dp"
				        android:textColor="@color/bottom_widow_color"
                     />
                </RadioGroup>  
      </LinearLayout>  
        <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自我介绍"
                      android:ems="4"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/tea_tv_base_jieshao"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                     android:layout_marginLeft="3dp"
                    android:background="@color/bottom_widow_color"
                    android:hint="自我介绍"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
             <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="学        校"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/tv_tea_base_schoo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                     android:layout_marginLeft="5dp"
                    android:background="@color/bottom_widow_color"
                    android:text="请输入您所在的学校"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
              <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="@dimen/margin_topandbuttom"
          >

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:ems="4"
                           android:text="授        课"
                           android:textColor="@color/bottom_widow_color"
                           android:textSize="15dp" />

                   <TextView
                       android:id="@+id/age_tea_sunject"
                           android:layout_width="wrap_content"
                           android:layout_height="25dp"
                           android:layout_weight="1"
                           android:background="@color/bottom_widow_color"
                           android:drawableRight="@drawable/pulldown1"
                           android:padding="5dp"
                           android:gravity="center"
                           android:drawablePadding="5dp"
                           android:text="初中"
                           android:layout_gravity="center"
                           android:textSize="12dp"
                           android:textColor="@color/button_typeface_color"
                           />
                 <TextView
                     android:id="@+id/tv_tea_subject"
                           android:layout_width="wrap_content"
                           android:layout_height="25dp"
                           android:layout_weight="1"
                             android:gravity="center"
                           android:background="@color/bottom_widow_color"
                           android:drawableRight="@drawable/pulldown1"
                           android:padding="5dp"
                           android:drawablePadding="5dp"
                           android:layout_marginLeft="5dp"
                           android:text="语文"
                           android:layout_gravity="center"
                           android:textSize="12dp"
                           android:textColor="@color/button_typeface_color"
                           />
  </LinearLayout>
    <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电        话"
                      android:ems="4"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_tea_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                     android:layout_marginLeft="5dp"
                    android:background="#D4D4D4"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
                <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮       箱"
                      android:ems="4"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/ed_tea_base_email"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                     android:layout_marginLeft="5dp"
                    android:background="@color/bottom_widow_color"
                    android:text="请输入邮箱"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="证        书"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_tea_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                     android:layout_marginLeft="5dp"
                    android:background="@color/bottom_widow_color"
                    android:text="点击上传教师资格证书"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="305dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal" >

               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                      android:ems="4"
                    android:textColor="@color/bottom_widow_color"
                    android:textSize="15dp" />
            <EditText
                android:id="@+id/tea_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:background="@color/bottom_widow_color"
                android:drawableLeft="@drawable/bai"
                android:gravity="center"
                android:hint="输入旧密码"
                android:password="true"
                android:textColorHint="@color/button_typeface_color"
                android:textSize="15dp" />
            </LinearLayout>
           </LinearLayout>
                                    <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:orientation="horizontal" >
               <View
                    android:layout_width="73dp"
                    android:layout_height="1dp"
                    />
            <EditText
                android:id="@+id/tea_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:background="@color/bottom_widow_color"
                android:drawableLeft="@drawable/bai"
                android:gravity="center"
                android:hint="输入新密码"
                 android:password="true"
                android:textColorHint="@color/button_typeface_color"
                android:textSize="15dp" />
            </LinearLayout>
                                                <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
               <View
                    android:layout_width="73dp"
                    android:layout_height="1dp" />
            <EditText
                android:id="@+id/tea_ed_pwd_comfig"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:background="@color/bottom_widow_color"
                android:drawableLeft="@drawable/bai"
                android:gravity="center"
                android:hint="确认新密码"
                 android:password="true"
                android:textColorHint="@color/button_typeface_color"
                android:textSize="15dp" />
            </LinearLayout>
     </LinearLayout>
   </RelativeLayout>
</ScrollView>
