<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@drawable/register">
    <RelativeLayout
            android:id="@+id/stu_main_page"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_tillte"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="11.5dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_stu_ques"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="我要提问"
                    android:textColor="@color/reg"
                    android:textSize="15dp"/>
            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                    >
                <TextView
                        android:id="@+id/tv_mess"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="消息"
                        android:textColor="@color/sk_student_main_color"
                        android:textSize="15dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/mess_num"
                           android:visibility="gone"
                           android:scaleType="centerInside"
                           android:src="@drawable/point_bg"
                        />

            </RelativeLayout>


            <TextView
                    android:id="@+id/tv_my_tea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的老师"
                    android:textColor="@color/sk_student_main_color"
                    android:textSize="15dp"/>
            <TextView
                    android:id="@+id/tv_find_tea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="找老师"
                    android:textColor="@color/sk_student_main_color"
                    android:textSize="15dp"/>
        </LinearLayout>
        <View
                android:id="@+id/stu_bac_huise"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/undine_linearLayout"
                android:layout_alignParentLeft="true"
                android:background="#578f8f8f"/>

        <LinearLayout
                android:id="@+id/undine_linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_tillte"
                android:layout_marginBottom="10dp"
                android:background="#CFCFCF">
            <View
                    android:id="@+id/stu_move_undline"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="@color/reg"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/undine_linearLayout"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/tolarge_text">
        </LinearLayout>
        <include
                android:id="@+id/in_wo_de_shi_ke"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-235dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/fragment_buttom"
                />
    </RelativeLayout>
</FrameLayout>