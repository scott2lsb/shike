<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_stu_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/li_stu_plain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/sk_student_main_color"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_stu_planback"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/share_text" />

            <TextView
                android:id="@+id/action_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="添加备注"
                android:textColor="@color/button_typeface_color"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_stu_nextplan"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/share_text" />
        </LinearLayout>
        <RelativeLayout 
             android:layout_below="@id/li_stu_plain"
             android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <com.yshow.shike.customview.PaletteView
            android:id="@+id/stu_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/buttom_plain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/stu_main_color_lucency"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp" >
                <TextView
                    android:id="@+id/plan_cexiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/select_chexiao"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="撤销"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp" >
                <TextView
                    android:id="@+id/pain_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/select_huifu"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="恢复"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/stu_yd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stu_yd3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tea_yindao_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tea_yd_tool3"
        android:visibility="gone" />

</FrameLayout>