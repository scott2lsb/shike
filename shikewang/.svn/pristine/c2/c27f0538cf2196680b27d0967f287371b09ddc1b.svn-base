<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_buttom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:layout_alignParentLeft="true"
      android:background="@color/bottom_widow_color"
      android:orientation="vertical" >
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
          <TextView
              android:id="@+id/tv_my_shike"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/select_buttom_find_teacher"
              android:drawablePadding="6dp"
              android:layout_marginTop="7dp"
              android:layout_marginLeft="30dp"
              android:text="我的师课 "
              android:gravity="center"
              android:paddingRight="5dp"
              android:textColor="#FFFFFF"
              android:textSize="@dimen/share_text" />
          <TextView
              android:id="@+id/tv_mess_del"
              android:paddingLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="7dp"
              android:drawableLeft="@drawable/select_delete"
              android:text="删除消息"
              android:gravity="center"
              android:drawablePadding="6dp"
              android:textColor="#FFFFFF"
              android:textSize="@dimen/share_text" />
 		 </LinearLayout>
          <LinearLayout
              android:id="@+id/tea_wire"
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:orientation="horizontal"
              android:layout_marginRight="5dp"
             >
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:src="@drawable/three_hang" />

          </LinearLayout>
      </LinearLayout>
      <TextView
          android:id="@+id/tv_exchg_mon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="兑换现金"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
      <TextView
          android:id="@+id/tv_exchg_sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="兑换商品"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
      <TextView
          android:id="@+id/tv_tea_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="个人信息"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />

      <TextView
          android:id="@+id/tv_tea_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="帐户信息"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
      <TextView
          android:id="@+id/tv_tea_shar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="分享朋友"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
      <TextView
          android:id="@+id/tv_tea_about"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="关于师课"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
      <TextView
          android:id="@+id/tv_tea_main_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="23dp"
          android:paddingBottom="5dp"
          android:paddingTop="5dp"
          android:text="退出"
          android:textColor="#FFFFFF"
          android:textSize="@dimen/share_text" />
  </LinearLayout>
</RelativeLayout>
