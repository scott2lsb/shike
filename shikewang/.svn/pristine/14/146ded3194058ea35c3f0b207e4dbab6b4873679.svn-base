<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_fragment_buttom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/sk_student_main_color"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_my_shike"
                        android:drawableLeft="@drawable/select_buttom_find_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:drawablePadding="8dp"
                        android:text="我的师课 "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/share_text"/>
                <View
                        android:id="@+id/view_button"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        />
                <TextView
                        android:id="@+id/tv_delete"
                        android:text="删除消息"
                        android:drawableLeft="@drawable/select_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:drawablePadding="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/share_text"
                        android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/three_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true">
                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:text="我的师课 "
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/share_text"
                        android:src="@drawable/three_hang"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
                android:id="@+id/tv_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingTop="12dp"
                android:text="个人信息"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/share_text"/>
        <TextView
                android:id="@+id/tv_account_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingTop="12dp"
                android:text="帐户信息"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/share_text"/>
        <TextView
                android:id="@+id/tv_share_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingTop="12dp"
                android:text="分享同学"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/share_text"/>
        <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingTop="12dp"
                android:text="关于师课"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/share_text"/>

        <TextView
                android:id="@+id/tv_stu_chongz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingTop="12dp"
                android:text="充值"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/share_text"/>
        <TextView
                android:id="@+id/tv_stumain_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="立即注册"
                android:textSize="@dimen/share_text"
                android:textColor="@color/reg_color"/>
    </LinearLayout>
</RelativeLayout>
