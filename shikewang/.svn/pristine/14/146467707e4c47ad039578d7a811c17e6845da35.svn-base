<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register1"
    >

    <TextView
        android:id="@+id/tv_tiban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题板"
        android:padding="10dp"
        android:textColor="@color/boart_three_color"
        android:textSize="35dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gr_que_board"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/tv_tiban"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
    
    <LinearLayout
        android:id="@+id/ll_que_volume_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_board_picture5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="160dp"
            android:padding="9dip"
            android:src="@drawable/volume_control" />

        <TextView
            android:id="@+id/tv_que_time_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="woaliye"
            android:textColor="@color/red_color"
            android:layout_gravity="right" />
    </LinearLayout>
    
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gr_que_board"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_que_record1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/tea_void"
            android:visibility="gone"
             />

        <ImageView
            android:id="@+id/iv_que_record2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/tea_void"
             android:visibility="gone"
           />

        <ImageView
            android:id="@+id/iv_que_record3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/tea_void"
             android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_que_record"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="#5CACEE" >
        <ImageView
            android:id="@+id/iv_que_voide"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/select_tea_void" />
    </LinearLayout>
   <RelativeLayout
        android:id="@+id/ll_que_bom_anim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-17dp"
        android:background="@color/bottom_widow_color" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <TextView
                android:id="@+id/tv_que_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_confirm"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/tv_que_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_pazhao"
                android:gravity="center"
                android:text="语音"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/tv_que_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_tianjiar"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_que_comfing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_confirm1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_que_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/select_trees_points"
            android:textSize="13dp" />
    </RelativeLayout>
</RelativeLayout>