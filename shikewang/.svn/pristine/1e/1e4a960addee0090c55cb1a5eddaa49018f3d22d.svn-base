<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp" >
    <ImageView
        android:id="@+id/goodslist_item_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/s_teacher_icon" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/goods_list_item_duihuan"
        android:layout_toRightOf="@+id/goodslist_item_img"
        android:background="@color/blue" >

    <TextView
        android:id="@+id/goods_list_item_msgtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="样本"
        android:maxWidth="140dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/button_typeface_color" />
    <TextView
        android:id="@+id/goods_list_item_matchtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:text="100000积分"
        android:textColor="@color/button_typeface_color" />
   </RelativeLayout>
    <Button
        android:id="@+id/goods_list_item_duihuan"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:background="@color/qian_lan"
        android:layout_centerVertical="true"
        android:text="兑换"
         android:textColor="@color/button_typeface_color" />
</RelativeLayout>