<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/li_stu_quescoun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/sk_student_main_color"
        >
        <TextView
        android:id="@+id/tv_coun_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐户信息"
        android:layout_gravity="center_vertical"
        android:paddingLeft="70dp"
        android:textColor="@color/button_typeface_color"
        android:textSize="25dp" />
     </LinearLayout>
 <LinearLayout
        android:id="@+id/rl_tillte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_stu_quescoun"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_cz_reg"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="充值记录 "
            android:textColor="@color/reg"
            android:textSize="@dimen/share_text" />
          <TextView
              android:id="@+id/tv_sy_reg"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text="使用记录"
              android:textColor="@color/sk_student_main_color"
              android:textSize="@dimen/share_text" />
    </LinearLayout>
       <View
           android:id="@+id/coun_bac"
           android:layout_width="fill_parent"
            android:layout_height="40dp"
           android:layout_alignBottom="@+id/undine_linearLayout"
           android:layout_alignParentLeft="true"
           android:background="#578f8f8f" />

    <LinearLayout
        android:id="@+id/undine_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tillte"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#CFCFCF" >
        <View
            android:id="@+id/coun_reg_undline"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/reg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_th_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/undine_linearLayout"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>
