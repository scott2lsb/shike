<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1" >
    <LinearLayout
        android:id="@+id/li_tea_my_sk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/pd_tp_bm"
        android:background="@color/sk_student_main_color" >
        <TextView
            android:id="@+id/tv_per_skback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/share_text" />
        <TextView
            android:id="@+id/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="补充个人信息"
            android:textColor="@color/button_typeface_color"
            android:layout_weight="1"
            android:textSize="@dimen/title_text" />
        <TextView
            android:id="@+id/tv_per_comg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/share_text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tishi"
        android:layout_below="@+id/li_tea_my_sk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/tv_tea_seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textSize="15dp" />
         <TextView
            android:id="@+id/tv_tea_seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="：老师还不认识您，请填写下面的信息，方便老师和你交流."
            android:textSize="15dp" />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/user_name"
        android:layout_below="@+id/tishi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:id="@+id/tv_tea_seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textSize="@dimen/share_text" />
        <EditText
            android:id="@+id/tv_noreg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin"
            android:background="@drawable/per_info_edi"
            android:ems="10"
            android:hint="请输入用户名"
            android:paddingLeft="5dp"
            android:textColor="@color/button_typeface_color"
            android:textColorHint="@color/button_typeface_color"
            android:textSize="@dimen/user_text" >
            <requestFocus />
        </EditText>
     </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:id="@+id/tv_tea_seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学龄段："
            android:textSize="@dimen/share_text"  />
         <TextView
             android:id="@+id/tv_no_reg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="@dimen/margin"
             android:background="@drawable/per_info_edi"
             android:gravity="center"
             android:paddingLeft="5dp"
             android:hint="请选择"
             android:layout_weight="2"
             android:textColorHint="@color/button_typeface_color"
             android:textSize="@dimen/user_text"
             android:textColor="@color/button_typeface_color"  />
    </LinearLayout>
</RelativeLayout>
