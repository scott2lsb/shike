<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/register"
                android:orientation="vertical">

    <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/userregister_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师注册"
                android:textColor="@color/top_title_color"
                android:textSize="15dp">
        </TextView>

        <TextView
                android:id="@+id/sturegister_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="设置密码"
                android:textColor="#DC143C"
                android:textSize="25dp">
        </TextView>
    </LinearLayout>
    <EditText
            android:id="@+id/login_name_edit"
            android:layout_height="48dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/main_layout"
            android:background="@drawable/eee"
            android:cursorVisible="true"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:password="true"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:hint="请输入密码（6-14个字母）"
            android:textSize="30px"/>
    <EditText
            android:id="@+id/login_pass_edit"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/login_name_edit"
            android:layout_marginTop="40dp"
            android:background="@drawable/eee"
            android:cursorVisible="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:password="true"
            android:hint="请输入你的密码"
            android:singleLine="true"
            android:textSize="30px"/>

    <include
            android:id="@+id/incl_three_buttom_anim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            layout="@layout/i_bottom_navigation"/>
</RelativeLayout>