<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:paddingRight="10dp"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/iv_picture1"
        android:layout_width="200dp"
        android:background="@drawable/bg_message_image"
        android:padding="3dp"
        android:layout_height="200dp">
    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/xiaoxi_moren" />
   <ImageView
       android:id="@+id/iv_select_bac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:visibility="gone"     
        android:background="@drawable/select_tiku" />
</FrameLayout>
  <GridView
     android:id="@+id/itme_gridview"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/iv_picture1"
     android:paddingTop="3dp"
     android:listSelector="#00000000"
     android:numColumns="4"
     android:verticalSpacing="3dp"
     android:horizontalSpacing="3dp" > 
    </GridView> 
     <ImageView
        android:id="@+id/iv_student_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_picture1"
        android:layout_alignTop="@+id/iv_picture1"
        android:visibility="gone"
        android:src="@drawable/stu_bra_dele" /> 
 </RelativeLayout>