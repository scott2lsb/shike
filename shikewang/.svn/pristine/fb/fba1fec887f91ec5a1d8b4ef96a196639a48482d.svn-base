<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/register">

    <LinearLayout
            android:id="@+id/li_myshike"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/sk_student_main_color"
            >
        <TextView
                android:id="@+id/tv_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回"
                android:gravity="center"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/share_text"
                />
        <TextView
                android:id="@+id/action_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="我的师课"
                android:gravity="center"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/title_text"/>
    </LinearLayout>
    <ScrollView
            android:scrollbars="none"
            android:layout_below="@id/li_myshike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                <ImageView
                        android:id="@+id/tudent_picture"
                        android:layout_width="71dp"
                        android:layout_height="71dp"
                        android:src="@drawable/student_picture"
                        />
                <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@color/sk_student_main_color"
                            android:paddingLeft="6dp"
                            android:text="姓名:"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    <TextView
                            android:id="@+id/tv_user_nickname"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="3dp"
                            android:background="@color/sk_student_main_color"
                            android:paddingLeft="6dp"
                            android:text="用户名:"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                    <TextView
                            android:id="@+id/tv_grade_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="6dp"
                            android:background="@color/sk_student_main_color"
                            android:text="学龄段:"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_teacher_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_info"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/action_settings"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="自我介绍"
                        android:textColor="#34CD2E"
                        android:textSize="20dp"/>
                <TextView
                        android:id="@+id/tv_guan_zhu"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@color/sk_student_main_color"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_benyue_tiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_teacher_info"
                    android:layout_marginTop="10dp"
                    android:text="本月提问："
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/sk_student_main_color"
                    android:textSize="16dp"
                    />
            <RelativeLayout
                    android:id="@+id/rl_fen_recg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_benyue_tiwen"
                    android:layout_below="@+id/tv_benyue_tiwen"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                <TextView
                        android:id="@+id/tv_shengyu_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="剩余师课积分："
                        android:textColor="@color/sk_student_main_color"
                        android:textSize="16dp"/>
                <TextView
                        android:id="@+id/tv_sk_recg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/sk_student_main_color"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:text="充值"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="15dp"/>
            </RelativeLayout>
            <LinearLayout
                    android:layout_below="@+id/rl_fen_recg"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    >
                <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@color/sk_student_main_color"
                        android:text="个人信息"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:paddingTop="5dp"/>
                <TextView
                        android:id="@+id/tv_acc_info"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@color/sk_student_main_color"
                        android:text="帐户信息"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:paddingTop="5dp"/>
                <TextView
                        android:id="@+id/tv_shre_frd"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@color/sk_student_main_color"
                        android:text="分享同学"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:paddingTop="5dp"/>
                <TextView
                        android:id="@+id/tv_about_sk"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@color/sk_student_main_color"
                        android:text="关于师课"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:paddingTop="5dp"/>
                <TextView
                        android:id="@+id/tv_finsh_reg"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@color/reg_finsh"
                        android:text="完成注册"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="60dp"
                        android:paddingRight="60dp"
                        android:paddingTop="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>