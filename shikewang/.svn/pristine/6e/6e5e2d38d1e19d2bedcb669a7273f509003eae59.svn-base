<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
    <TextView
        android:id="@+id/tv_liwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:drawableLeft="@drawable/send_gife"
        android:text="送礼物"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:textColor="#FF3030"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/tv_queding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_liwu"
        android:layout_marginRight="15dp"
        android:text="给老师送礼物把！"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:textColor="#FF3030"
        android:textSize="16dp" />
    <GridView
            android:id="@+id/Gif_gridview1"
            android:layout_below="@+id/tv_queding1"
            android:layout_above="@+id/ll_send_liwu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:horizontalSpacing="3dp" >
    </GridView>
    <RelativeLayout
    android:id="@+id/ll_send_liwu"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="-24dp"
    android:background="@color/sk_student_main_color"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:src="@drawable/select_trees_points" />
    <TextView
        android:id="@+id/tv_queding11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_toRightOf="@+id/tv_button_back11"
        android:drawableTop="@drawable/select_confirm1"
        android:gravity="center"
        android:padding="5dp"
        android:text="确定"
        android:textColor="@color/button_typeface_color"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/tv_button_back11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="109dp"
        android:drawableTop="@drawable/select_back"
        android:gravity="center"
        android:padding="5dp"
        android:text="返回"
        android:textColor="@color/button_typeface_color"
        android:textSize="16dp" />
</RelativeLayout>
</RelativeLayout>