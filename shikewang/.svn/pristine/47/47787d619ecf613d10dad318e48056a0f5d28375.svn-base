<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/li_myshike"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pd_tp_bm"
        android:background="@color/sk_student_main_color"
        >
        <TextView
        android:id="@+id/tv_buttom_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:layout_gravity="center"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/title_text" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_recharge_one_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/li_myshike"
        android:orientation="horizontal">
   <RelativeLayout
       android:id="@+id/re_five_bai"
        android:background="@drawable/recommend0"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_five_bai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/recharge_five_bai"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_five_bai">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="500学分"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="50￥"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/re_one_qian"
       android:background="@drawable/zaixian_tea"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/recharge_yiqian"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_one">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000学分"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="100￥"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_recharge_five_qian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_recharge_one_five"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
<RelativeLayout
        android:id="@+id/iv_two_qian"
        android:background="@drawable/recommend1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_five_bai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/recharge_two_qian"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_five_bai">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000学分"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="200￥"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
       android:id="@+id/re_five_qain"
        android:background="@drawable/five_bac"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/iv_five_bai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/recharge_five_qian"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/iv_five_bai">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5000学分"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="480￥"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp"
            android:background="@color/red_color"/>
        </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_five_bai"
        android:layout_alignTop="@+id/iv_five_bai"
        android:layout_marginTop="15dp"
        android:src="@drawable/youhui" />
    </RelativeLayout>
    </LinearLayout>

