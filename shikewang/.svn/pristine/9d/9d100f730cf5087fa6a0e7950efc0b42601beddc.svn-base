<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/tea_gongju_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/zaixian_tea"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/tea_gongju_img"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:paddingLeft="20dp"
                android:src="@drawable/stu_gongju_pencilsmalll" >
            </ImageView>
            <TextView
                android:id="@+id/stu_gongju_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提问"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tea_tiku_tiku"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/tikubag"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/stu_questions_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:src="@drawable/tiku" >
            </ImageView>
            <TextView
                android:id="@+id/tv_tiku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="复习"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_add_tool_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#34CD2E"
         >
        <TextView
            android:id="@+id/tv_add_tool_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:drawableLeft="@drawable/select_confirm"
            android:layout_centerInParent="true"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/share_text" />
<!--         <ImageView
            android:id="@+id/iv_add_tool_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_add_tool_back"
            android:paddingLeft="10dp"
           android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="13dp"
            android:src="@drawable/select_trees_points"
            android:textSize="13dp" /> -->

    </RelativeLayout>

</RelativeLayout>