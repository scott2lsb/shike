<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/tv_tuijian_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/select_recommend_teacher"
        android:drawableTop="@drawable/zhan"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="15dp"
        android:text="推荐老师"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_star_teacher"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/tv_tuijian_teacher"
        android:background="@drawable/select_star_teacher"
        android:drawableTop="@drawable/star_eacher3"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="15dp"
        android:text="明星老师 "
        android:textColor="#FFFFFF" />

   <TextView
       android:id="@+id/tv_find_teacher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/tv_star_teacher"
       android:layout_below="@+id/tv_star_teacher"
       android:layout_marginTop="18dp"
       android:background="@drawable/select_find_teacher"
       android:drawableTop="@drawable/find_teather"
       android:gravity="bottom|center_horizontal"
       android:paddingBottom="3dp"
       android:paddingTop="15dp"
       android:text="搜索"
       android:textColor="#FFFFFF" />

   <TextView
       android:id="@+id/tv_zaixian_find_tea"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/tv_find_teacher"
       android:layout_alignBottom="@+id/tv_find_teacher"
       android:layout_toLeftOf="@+id/tv_star_teacher"
       android:background="@drawable/zaixian_tea"
       android:drawableTop="@drawable/i_is_tea"
       android:gravity="bottom|center_horizontal"
       android:paddingBottom="3dp"
       android:paddingTop="15dp"
       android:text="在线老师"
       android:textColor="#FFFFFF" />

</RelativeLayout>