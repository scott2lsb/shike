<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".StudentActivity">
    <TextView
            android:id="@+id/tv_recommend_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="5dp"
            android:drawableRight="@drawable/pulldown1"
            android:drawablePadding="25dp"
            android:text="学科"
            android:background="#34CD2E"
            android:textColor="#FFFFFF"
            android:textSize="25dp"/>
    <com.yshow.shike.widget.XListView
            android:id="@+id/lv_recommend"
            android:layout_below="@id/tv_recommend_subject"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
</RelativeLayout>
