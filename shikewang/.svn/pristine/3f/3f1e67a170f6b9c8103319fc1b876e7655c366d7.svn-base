<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@drawable/register">
    <RelativeLayout
            android:id="@+id/stu_slet_tea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/stu_sele_tea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/sk_student_main_color"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_up_step"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="上一步"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text"/>
            <TextView
                    android:id="@+id/action_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择老师"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="25dp"/>
            <TextView
                    android:id="@+id/tv_down_step"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/iv_board_picture"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_below="@id/stu_sele_tea"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/tiban_student"
                android:padding="9dip"
                android:src="@drawable/xiaoxi_moren"/>

        <LinearLayout
                android:id="@+id/ll_seleck_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_board_picture"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                >
            <TextView
                    android:id="@+id/tv_select_subject"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:background="#34CD2E"
                    android:drawableRight="@drawable/pulldown1"
                    android:text="选择学科"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/share_text"/>
            <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="发送给"
                    android:textColor="#34CD2E"
                    android:textSize="20dp"/>

            <RelativeLayout
                    android:id="@+id/online_tea_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/sk_student_main_color">

                <ImageView
                        android:id="@+id/is_online"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:background="@drawable/tea_sele_bac"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/tv_online"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:text="在线老师"
                        android:gravity="center"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_seleck_subject"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/ll_seleck_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_seleck_teacher"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:background="#34CD2E"
                        android:drawablePadding="15dp"
                        android:drawableRight="@drawable/pulldown1"
                        android:text="我的老师"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/share_text"/>
                <ImageView
                        android:id="@+id/iv_my_image"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:background="@drawable/tea_sele_bac"
                        android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_board_picture"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/iv_record1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/record"
                    android:visibility="gone"/>
            <ImageView
                    android:id="@+id/iv_record2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/record"
                    android:visibility="gone"/>
            <ImageView
                    android:id="@+id/iv_record3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/record"
                    android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>