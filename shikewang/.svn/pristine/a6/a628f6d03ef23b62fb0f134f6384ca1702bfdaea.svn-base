<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/fragment_user_frist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">
    <TextView
        android:id="@+id/user_record_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_record"
        android:textColor="@color/green1"
        android:textSize="@dimen/share_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fragment_user_frist"
         android:layout_margin="@dimen/margin">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
        
        <LinearLayout
            android:id="@+id/account_uselinearout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
        </RelativeLayout>

</LinearLayout>