<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1" >

    <LinearLayout
        android:id="@+id/ll_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="我的题库"
            android:textColor="#FF3030"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#34CD2E"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/pulldown1"
            android:minEms="4"
            android:padding="5dp"
            android:text="按时间"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_LinearLayout"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/rl_relativeLayout"
        android:layout_marginBottom="20dp" />
    <RelativeLayout
        android:id="@+id/rl_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-21dp"
        android:background="#34CD2E"
        android:padding="5dp" >
        <ImageView
            android:id="@+id/iv_count_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/select_trees_points"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_count_animation"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/iv_count_animation"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/select_delete"
            android:text="删除"
            android:textColor="@color/button_typeface_color"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="85dp"
            android:layout_toLeftOf="@+id/tv_delete"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/select_confirm"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="13dp" />
    </RelativeLayout>
</RelativeLayout>