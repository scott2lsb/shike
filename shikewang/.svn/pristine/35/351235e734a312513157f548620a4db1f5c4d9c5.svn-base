<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    android:orientation="vertical" >
<LinearLayout
        android:id="@+id/li_tea_my_sk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >
        <TextView
        android:id="@+id/tv_cash_bk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="@dimen/share_text"
        android:textColor="@color/button_typeface_color"
        android:padding="@dimen/pd_tp_bm"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兑换现金"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="@dimen/title_text"
        android:textColor="@color/button_typeface_color" />
    <TextView
        android:id="@+id/tv_cash_comf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="@dimen/share_text"
        android:textColor="@color/button_typeface_color"
         android:padding="@dimen/pd_tp_bm"
        />
     </LinearLayout>
     <RelativeLayout
        android:id="@+id/duihuan_xianjin_relative"
        android:layout_below="@+id/li_tea_my_sk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >
        <TextView
            android:id="@+id/teacher_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/user_text" />
    </RelativeLayout> 

    <RelativeLayout
        android:id="@+id/teacher_inputmoney_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/duihuan_xianjin_relative"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/teacher_inputmoney1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teacher_inputEdit"
            android:text="我要兑换"
            android:textSize="@dimen/user_text"
            android:textColor="@color/blue" />
        <EditText
            android:id="@+id/teacher_inputEdit"
            style="@style/edit_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/teacher_inputmoney1"
            android:background="@drawable/anniu"
            android:hint="请输入1000的倍数"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:numeric="integer"
            android:padding="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teacher_inputEdit"
            android:layout_toRightOf="@+id/teacher_inputEdit"
            android:text="分"
            android:textSize="@dimen/user_text"
            android:textColor="@color/blue"  />
    </RelativeLayout>
    <TextView
        android:id="@+id/expain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_inputmoney_layout"
        android:layout_margin="10dp"
        android:text="兑换现金最低3000师课分起兑；每月10日和25日为兑换现金日;根据您的申请时间先后排序，我们会尽快为您兑换。"
        android:textColor="@color/blue"
        android:textSize="15dp" />
</RelativeLayout>