<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
       <RelativeLayout
        android:id="@+id/ll_bottom_navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_widow_color" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_confirm"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/tv_comfing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_confirm1"
                android:gravity="center"
                android:text="接收"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/tv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_pazhao"
                android:gravity="center"
                android:text="语音"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_tianjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/give_up"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
             <TextView
                android:id="@+id/tv_tianjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/select_tianjiar"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/button_typeface_color"
                android:textSize="13dp" />
            
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_button_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@drawable/select_trees_points"
            android:textSize="13dp" />
    </RelativeLayout>

</RelativeLayout>
