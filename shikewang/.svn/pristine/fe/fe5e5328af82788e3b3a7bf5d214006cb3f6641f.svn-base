<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/sturegister_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pd_tp_bm"
        android:background="@color/sk_student_main_color"
        >
        <TextView
            android:id="@+id/tv_give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="放弃"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/share_text" />
        <TextView
            android:id="@+id/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢老师"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/title_text" />
    <TextView
        android:id="@+id/tv_think_confg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
     </LinearLayout>
    <!--感谢老师修改  -->
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/sturegister_text"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
        android:orientation="vertical">
	     <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="给个赞美"
	       android:textSize="20dp"
	       android:textColor="@color/sk_student_main_color"
	         />
 <GridView
            android:id="@+id/think_gridview"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:verticalSpacing="3dp"    
            android:horizontalSpacing="3dp"        
             />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
	       android:layout_marginTop="10dp"
           android:orientation="horizontal"> 
       <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="送个礼物"
	       android:textSize="20dp"
	       android:textColor="@color/sk_student_main_color"
	         />
         <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="(需要学分哦！)"
	       android:textSize="17dp"
	       android:textColor="@color/red_color"
	         />
       </LinearLayout>
         <GridView
            android:id="@+id/send_gridview"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:verticalSpacing="3dp"    
            android:horizontalSpacing="3dp"        
             /> 
     </LinearLayout>
</RelativeLayout>
