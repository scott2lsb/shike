<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1" >
<TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_settings"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="题板"
        android:textColor="#FF3030"
        android:textSize="30dp" />
        <android.support.v4.view.ViewPager
            android:id="@+id/tea_comm_vp"
            android:layout_below="@+id/action_settings"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/teacomm_anim"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" >
        </android.support.v4.view.ViewPager>
     <RelativeLayout
        android:id="@+id/teacomm_anim"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:background="@color/bottom_widow_color"
        android:orientation="horizontal" 
      >
        <ImageView
            android:id="@+id/tea_three_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:src="@drawable/select_trees_points" />
        <TextView
            android:id="@+id/tea_commfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="56dp"
            android:layout_toLeftOf="@+id/tea_three_point"
            android:drawableTop="@drawable/select_confirm1"
            android:gravity="center"
            android:text="确定"
            android:padding="3dp"
            android:drawablePadding="1dp"
            android:textColor="@color/button_typeface_color"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/tea_cit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="46dp"
            android:layout_toLeftOf="@+id/tea_commfig"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/select_back"
            android:gravity="center"
            android:padding="3dp"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="13dp" />
    </RelativeLayout>
  </RelativeLayout>
