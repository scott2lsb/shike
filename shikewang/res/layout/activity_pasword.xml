<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/register"
    android:orientation="vertical" >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="忘记密码"
        android:textSize="25dp"
        android:textColor="#DC143C"/>
    <EditText
      android:id="@+id/ET_PhoneName"
      android:layout_width="270dp"
      android:layout_height="50dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/eee"
      android:cursorVisible="false"
      android:hint="請输入你的手机号"
      android:gravity="center"
      android:textSize="22px" />
   <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <EditText
	      android:id="@+id/et_verify_edit"
	      android:layout_width="170dp"
	      android:layout_height="50dp"
	      android:layout_marginLeft="15dp"
	      android:layout_marginTop="20dp"
	      android:background="@drawable/eee"
	      android:cursorVisible="false"
	      android:hint="請输入你的验证码"
	      android:gravity="center"
	      android:textSize="22px" />
    <TextView
	       android:id="@+id/tv_verify"
	       android:layout_width="90dp"
	       android:layout_height="50dp"
	       android:layout_marginTop="20dp"
	       android:layout_marginLeft="10dp"
	       android:text="发送验证码"
	       android:gravity="center"
	       android:background="@drawable/register_checkbox_false"
	       android:textSize="25px"
	       android:textColor="#FFFFFF" />  
    </LinearLayout>
     <TextView
	       android:id="@+id/tv_pasword"
	       android:layout_width="fill_parent"
	       android:layout_height="50dp"
	       android:layout_marginTop="45dp"
	       android:layout_marginLeft="13dp"
	       android:text="说明: 每天可向手机发送3次新密码"
	       android:gravity="left"
	       android:textSize="25px"
	       android:textColor="#1C86EE" />
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
     <include
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         layout="@layout/i_bottom_navigation" />
   </RelativeLayout>
</LinearLayout>