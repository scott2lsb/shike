<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register" >
    <LinearLayout
        android:id="@+id/li_tea_my_sk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >
        <TextView
        android:id="@+id/tv_tea_skback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的师课"
        android:gravity="center"
        android:layout_weight="3"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/title_text" />
    <TextView
        android:id="@+id/tv_tea_seting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_tea_my_sk"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >
        <ImageView
            android:id="@+id/teather_stu_picture"
            android:layout_width="92dp"
            android:layout_height="92dp"
             />
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical" >
                <TextView
                    android:id="@+id/tv_teather_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"                   
                    android:background="@color/button_teather_typeface_color"
                    android:paddingLeft="6dp"
                    android:text="用户名:"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_teather_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="right"
                    android:background="@color/button_teather_typeface_color"
                    android:paddingLeft="6dp"
                    android:text="学科:"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tv_teather_jifen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="6dp"
                    android:background="@color/button_teather_typeface_color"
                    android:text="师课积分:"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                  <TextView
                    android:id="@+id/tv_tea_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/button_teather_typeface_color"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="兑换商品"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                  <View
                      android:layout_width="5dp"
                      android:layout_height="wrap_content"/>
                   <TextView
                    android:id="@+id/tv_tea_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/button_teather_typeface_color"
                    android:text="兑换现金"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                </LinearLayout> 
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_teacher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/action_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"          
            android:text="自我介绍"
            android:textColor="@color/button_teather_typeface_color"
            android:textSize="20dp" />
        <TextView 
            android:id="@+id/tv_teather_zhu" 
            android:layout_width="306dp" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp" 
            android:layout_marginTop="20dp" 
            android:padding="3dp"
            android:background="@color/button_teather_typeface_color" 
            android:text="这个老师有点害羞，自我介绍还在完善中！"
             android:textColor="#FFFFFF" 
            android:textSize="15dp"/>
    </LinearLayout>
      <LinearLayout
          android:id="@+id/jieti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_teacher_info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="接题次数："
            android:textColor="@color/button_teather_typeface_color"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_jieti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/button_teather_typeface_color"
            android:textSize="16dp" />
    </LinearLayout>
   
  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jieti"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="学生赞美："
            android:textColor="@color/button_teather_typeface_color"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_shike_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/button_teather_typeface_color"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>