<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/rl_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/iv_void_save"
        android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:paddingTop="2dp"
	    android:paddingBottom="2dp"
        android:background="@drawable/teather_bg_message_image"
        />
    <ImageView
        android:id="@+id/iv_bac_pirture"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/select_tiku"
        android:layout_gravity="center"
        android:visibility="gone"
         />
    </FrameLayout>
     <GridView
            android:id="@+id/gf_mess_save"
            android:layout_below="@+id/rl_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:numColumns="6"
            android:verticalSpacing="3dp"
          /> 
</RelativeLayout>
