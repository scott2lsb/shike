<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/register">

    <RelativeLayout
            android:id="@+id/stu_add_voide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/li_tea_voide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/sk_student_main_color"
                android:padding="@dimen/pd_tp_bm">
            <TextView
                    android:id="@+id/tv_up_Step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text"/>
            <TextView
                    android:id="@+id/action_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="添加语音"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/title_text"/>
            <TextView
                    android:id="@+id/tv_down_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一步"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="@dimen/share_text"/>
        </LinearLayout>
        <FrameLayout
                android:id="@+id/bac_voide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pd_tp_bm"
                android:layout_below="@+id/li_tea_voide">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <ImageView
                        android:id="@+id/iv_board_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/tiban_student"
                        android:padding="9dp"
                        android:src="@drawable/xiaoxi_moren"/>
                <!-- 修改-->
                <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_board_picture"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/iv_record1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/teather_student"
                                android:visibility="gone"/>
                        <ImageView
                                android:id="@+id/iv_dele_record1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/stu_bra_dele"
                                android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/iv_record2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/teather_student"
                                android:visibility="gone"/>
                        <ImageView
                                android:id="@+id/iv_dele_record2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/stu_bra_dele"
                                android:visibility="gone"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/iv_record3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/teather_student"
                                android:visibility="gone"/>
                        <ImageView
                                android:id="@+id/iv_dele_record3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/stu_bra_dele"
                                android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 修改 -->
        </FrameLayout>
        <RelativeLayout
                android:id="@+id/ll_volume_control"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                >
            <ImageView
                    android:id="@+id/iv_board_picture5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/volume_control"/>
            <TextView
                    android:id="@+id/tv_time_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/li_tea_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#34CD2E"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/iv_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/select_pazhao"
                        android:drawablePadding="3dp"
                        android:text="语音"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="18dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_dele_mes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/select_delete"
                        android:drawablePadding="3dp"
                        android:text="语音删除"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="18dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/tv_paizhao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/select_tianjiar"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="添加"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="18dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>