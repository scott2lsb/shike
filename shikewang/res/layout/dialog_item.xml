<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/et_file_name"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp" >
    <EditText
        android:id="@+id/et_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入文件夹名称"
        android:textSize="15dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_file_name"
        android:layout_centerHorizontal="true" >
        <Button
            android:id="@+id/iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bottom_widow_color"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="是"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp" />
        <Button
            android:id="@+id/iv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:background="@color/bottom_widow_color"
                        android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="否"
            android:textColor="@color/button_typeface_color"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>