<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/li_stu_quescoun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >
        <TextView
        android:id="@+id/tv_teah_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/share_text"
        android:textColor="@color/button_typeface_color"
        />
    <TextView
        android:id="@+id/tv_tea_tiku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题库"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="@dimen/title_text"
        android:textColor="@color/button_typeface_color"
         />
    <TextView
        android:id="@+id/tv_tea_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/share_text"
        android:textColor="@color/button_typeface_color"
        />
     </LinearLayout>
 <LinearLayout
        android:id="@+id/rl_tillte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_stu_quescoun"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_tea_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="文件夹"
            android:paddingTop="3dp"
            android:textColor="@color/reg"
            android:textSize="15dp" />
          <TextView
              android:id="@+id/tv_tea_data"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:paddingTop="3dp"
              android:text="按日期"
              android:textColor="@color/bottom_widow_color"
              android:textSize="15dp" />
    </LinearLayout>

       <View
           android:id="@+id/tea_coun_huise"
           android:layout_width="160dp"
           android:layout_height="48dp"
           android:layout_alignBottom="@+id/undine_linearLayout"
           android:layout_alignParentLeft="true"
           android:background="#578f8f8f" />

    <LinearLayout
        android:id="@+id/undine_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tillte"
        android:background="#CFCFCF" >
        <View
            android:id="@+id/tea_coun_undline"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/reg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tea_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/undine_linearLayout"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>
