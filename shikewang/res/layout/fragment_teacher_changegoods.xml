<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    android:id="@+id/goods_duihuan_liebiaolayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     
    >
    <LinearLayout
        android:id="@+id/li_tea_my_sk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >
        <TextView
        android:id="@+id/tv_count_skback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兑换商品"
        android:gravity="center"
        android:layout_weight="2"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/title_text"/>
    <TextView
        android:id="@+id/tv_cun_comg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/share_text"
        />
     </LinearLayout>

    <TextView
        android:id="@+id/teacher_changegoods_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/li_tea_my_sk"
        android:background="@color/blue"
        android:textSize="@dimen/user_text"
        android:textColor="@color/button_typeface_color"
       />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/teacher_changegoods_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/goods_duihuan_liebiaolayout" >
        <com.yshow.shike.customview.CustomListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>