<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1" >
  <LinearLayout
        android:id="@+id/li_bank_Info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/bottom_widow_color"
        >

        <TextView
            android:id="@+id/tv_bank_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/button_typeface_color"
            android:textSize="@dimen/share_text" />

    <TextView
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐户信息"
        android:gravity="center"
        android:layout_weight="4"
        android:textColor="@color/button_typeface_color"
        android:textSize="@dimen/title_text" />
        </LinearLayout>

  <LinearLayout
        android:id="@+id/rl_tillte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_bank_Info"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_bank_coun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
             android:paddingTop="3dp"
            android:text="银行账户 "
            android:textColor="@color/reg"
            android:textSize="15dp" />
        <TextView
             android:id="@+id/tv_acc_balance"
              
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
               android:paddingTop="3dp"
              android:text="兑换记录"
              android:textColor="@color/bottom_widow_color"
              android:textSize="15dp" />
        <TextView
           android:id="@+id/tv_exchange_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:gravity="center"
            android:text="收入明细 "
            android:textColor="@color/bottom_widow_color"
            android:textSize="15dp" />
    </LinearLayout>
       <View
           android:id="@+id/bank_bac"
           android:layout_width="fill_parent"
           android:layout_height="60dp"
           android:layout_alignBottom="@+id/undine_linearLayout"
           android:layout_alignParentLeft="true"
           android:background="#578f8f8f" />

    <LinearLayout
        android:id="@+id/undine_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tillte"
        android:layout_marginBottom="10dp"
        android:background="#CFCFCF" >
        <View
            android:id="@+id/bank_undline"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/reg" />
    </LinearLayout>
<LinearLayout
        android:id="@+id/li_bank_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/undine_linearLayout"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>