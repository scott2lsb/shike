<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register" >

    <RelativeLayout
        android:id="@+id/tea_yindao2"
        android:layout_width="wrap_content"
        android:clipChildren="false"
        android:layout_height="wrap_content" >

        <!-- 消息三  头标题 -->

        <LinearLayout
            android:id="@+id/ti_ban_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/sk_student_main_color"
            android:padding="@dimen/pd_tp_bm" >

            <TextView
                android:id="@+id/tv_three_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/share_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pd_tp_bm"
                android:layout_weight="1"
                android:gravity="center"
                android:text="题板"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/title_text" />

            <TextView
                android:id="@+id/tv_tea_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="结束"
                android:textColor="@color/button_typeface_color"
                android:textSize="@dimen/share_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_xiaohongyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ti_ban_three"
            android:layout_marginLeft="@dimen/user_text"
            android:layout_marginTop="@dimen/pd_tp_bm"
            android:drawableLeft="@drawable/xiaoren"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="小红鱼"
            android:textColor="@color/boart_three_color"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/ll_shijain_tiban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xiaohongyu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/pd_tp_bm"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_visits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提问次数："
                android:textColor="@color/boart_three_color"
                android:textSize="@dimen/user_text" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="2014-04-19 21:27"
                android:textColor="@color/sk_student_main_color"
                android:textSize="@dimen/user_text" />
        </LinearLayout>

        <!--
         <LinearLayout
        android:id="@+id/ll_record_transform"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
