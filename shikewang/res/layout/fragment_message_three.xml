        <RelativeLayout
            android:id="@+id/ll_bottom_navigation2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bottom_widow_color"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/pd_tp_bm" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_comfing2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_confirm1"
                        android:drawablePadding="@dimen/padding_topandbuttom"
                        android:text="我要解答"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/select_pazhao"
                    android:gravity="center"
                    android:text="语音"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_give_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_tea_givevup"
                        android:drawablePadding="@dimen/padding_topandbuttom"
                        android:text="放弃解答"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_teather_tianjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/select_tianjiar"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="13dp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 老师端的注册 -->
        <RelativeLayout
            android:id="@+id/ll_bottom_JieShpouGuo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bottom_widow_color"
            android:padding="@dimen/pd_tp_bm"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
                <LinearLayout
                    android:id="@+id/tv_teather_jiazai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_take_phon"
                        android:drawablePadding="@dimen/padding_topandbuttom"
                        android:gravity="center"
                        android:text="拍照解答"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tv_i_is_void"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_pazhao"
                        android:drawablePadding="@dimen/padding_topandbuttom"
                        android:gravity="center"
                        android:text="录音"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/select_pazhao"
                    android:gravity="center"
                    android:text="语音"
                    android:textColor="@color/button_typeface_color"
                    android:textSize="13dp"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_teather_comfimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/tuku0"
                        android:drawablePadding="@dimen/margin_topandbuttom"
                        android:gravity="center"
                        android:text="题库"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- 学生端的注册 -->

        <RelativeLayout
            android:id="@+id/ll_bottom_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/sk_student_main_color"
            android:padding="@dimen/pd_tp_bm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_tianjian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_take_phon"
                        android:drawablePadding="@dimen/margin_topandbuttom"
                        android:gravity="center"
                        android:text="拍照提问"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_stu_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/select_pazhao"
                        android:drawablePadding="@dimen/margin_topandbuttom"
                        android:gravity="center"
                        android:text="语音"
                        android:textColor="@color/button_typeface_color"
                        android:textSize="@dimen/share_text" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- 图片的显示 -->

        <android.support.v4.view.ViewPager
            android:id="@+id/message_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/ll_shijain_tiban"
            android:layout_marginRight="20dp"
            android:clipChildren="false"
            android:layout_marginTop="@dimen/padding_topandbuttom" >
        </android.support.v4.view.ViewPager>
        <!-- 录音倒计时的显示 -->


        <RelativeLayout
                android:id="@+id/ll_volume_control"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                >
            <ImageView
                    android:id="@+id/iv_board_picture5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/volume_control" />

            <TextView
                    android:id="@+id/tv_back_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/tea_yindao_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tea_yd2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tea_yindao_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tea_yd3"
        android:visibility="gone" />

</FrameLayout>