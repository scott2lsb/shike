<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/bottom_widow_color">
    <TextView
            android:id="@+id/duihuan_xianjin_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="请填写邮寄信息"
            android:textColor="@color/button_typeface_color"
            android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duihuan_xianjin_dialog_text"
            android:orientation="vertical">

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:text="收件人姓名:"/>
            <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:text="收件人手机号:"/>
            <EditText
                    android:id="@+id/phonenum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:text="收件人地址:"/>
            <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="10dp"
                    />
        </LinearLayout>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button"
                android:text="兑换"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                />
    </LinearLayout>
</RelativeLayout>